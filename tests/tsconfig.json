{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "./dist-tests",
        "rootDir": "./",
        "types": [
            "jest",
            "node"
        ],
        "lib": [
            "esnext",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {}
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}